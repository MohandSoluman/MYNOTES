{
  "name": "notes",
  "version": "1.0.0",
  "description": "A Node.js notes application with PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:create": "sequelize-cli migration:create --name"
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript-ioc": "^3.0.5",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^5.0.0",
    "@types/chai-http": "^3.0.5",
    "@types/cors": "^2.8.17",
    "@types/mocha": "^10.0.9",
    "@types/swagger-ui-express": "^4.1.6",
    "chai": "^5.1.1",
    "chai-http": "^5.1.1",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.7",
    "sequelize-cli": "^6.6.2",
    "typescript": "^5.6.2"
  }
}
